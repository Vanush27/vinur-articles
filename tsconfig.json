{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "noEmit": true,
    "target": "ESNext",
    "useUnknownInCatchVariables": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src"],
      "@api": ["./src/api"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@screens": ["./src/screens"],
      "@screens/*": ["./src/screens/*"],
      "@components": [
        "./src/components"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@navigators/*": [
        "./src/navigators/*"
      ],
      "@redux/*": [
        "./src/redux/*"
      ],
      "@constants": ["./src/constants"],
      "@hooks": ["./src/hooks"],
      "@utils/*": ["./src/utils/*"],
      "@ui-modules": ["./src/ui-modules"],
    }
  },
  "exclude": [
     ".vscode", 
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src/**/*",
    "app.config.js",
    "declarations/*.d.ts",
  ]
}
