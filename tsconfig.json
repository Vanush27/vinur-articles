{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    // "moduleResolution": "node",
    "noEmit": true,
    // "resolveJsonModule": true,
    "target": "ESNext",
    "useUnknownInCatchVariables": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    /* Completeness */
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src"],
      "@api": ["./src/api"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@screens": ["./src/screens"],
      "@screens/*": ["./src/screens/*"],
      "@components": [
        "./src/components"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@i18n/*": [
        "./src/i18n/*"
      ],
      "@navigators/*": [
        "./src/navigators/*"
      ],
      "@redux/*": [
        "./src/redux/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@constants": ["./src/constants"],
      "@hooks": ["./src/hooks"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@ui-modules": ["./src/ui-modules"],
    }
  },
  "exclude": [
     ".vscode", 
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src/**/*",
    "app.config.js",
    // "configs/jest/jest-setup.config.js",
    // "polifills"
  ]
}
